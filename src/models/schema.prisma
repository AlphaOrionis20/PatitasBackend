// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cliente{
  idCliente Int @id @default(autoincrement())
  nome String
  email String @unique
  telefone String
  cpf String
  endereco String
  compra Compra[]
  @@map("user")
}

model Produto{
  idProduto Int @id @default(autoincrement())
  nome String
  quantidadeEstoque Int
  preco Decimal
  tipo String
  fornecedor String
  compra Compra[]

}

model Compra{
  cliente Cliente @relation(fields: [clienteId], references: [idCliente])
  clienteId Int
  produto Produto @relation(fields: [produtoId], references: [idProduto])
  produtoId Int
  data DateTime @default(now())
  valor Decimal
  idCompra Int @default(autoincrement())
  @@id([clienteId,produtoId,idCompra,data,valor])
}